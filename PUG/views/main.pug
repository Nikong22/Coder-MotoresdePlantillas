html
    head
        title='Mi primer plantilla de PUG' 
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css')
    body
        if (productos.length)
            h1 Vista de productos
            table.table.table-dark.table-hover
                tr
                    th Id
                    th Producto
                    th Precio
                    th Imagen
                each producto in productos
                    tr
                        td= producto.id
                        td= producto.title
                        td= producto.price
                        td
                            img(src=producto.thumbnail,  width="35" alt="url")
                            
        else
            h1 Vista de productos 
            label.badge.bg-warning No se encontraron productos
            

